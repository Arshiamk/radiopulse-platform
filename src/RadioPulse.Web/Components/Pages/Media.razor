@page "/media"
@inject IHttpClientFactory HttpClientFactory

<PageTitle>Now Playing</PageTitle>

<h1>Now Playing and Schedule</h1>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (isLoading)
{
    <p><em>Loading now playing...</em></p>
}
else if (nowPlaying is null)
{
    <div class="alert alert-warning">No episode is currently available.</div>
}
else
{
    <div class="card p-3 mb-4">
        <h4>@nowPlaying.Title</h4>
        <p class="text-muted">Published: @nowPlaying.PublishedAtUtc.ToLocalTime()</p>
        @if (!string.IsNullOrWhiteSpace(nowPlaying.AudioUrl))
        {
            <audio controls class="w-100">
                <source src="@nowPlaying.AudioUrl" type="audio/mpeg" />
            </audio>
        }
    </div>
}

<div class="row g-4">
    <div class="col-md-6">
        <div class="card p-3">
            <h5>Show Schedule</h5>
            <ul>
                @foreach (var show in shows)
                {
                    <li>@show.Title with @show.HostName (@show.StartTimeUtc - @show.EndTimeUtc UTC)</li>
                }
            </ul>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card p-3">
            <h5>Podcast Episodes</h5>
            <ul>
                @foreach (var episode in episodes)
                {
                    <li>@episode.Title</li>
                }
            </ul>
        </div>
    </div>
</div>

<div class="card p-3 mt-4">
    <h5>AI Top Moments</h5>
    <ul>
        @foreach (var moment in topMoments)
        {
            <li>@moment.Summary</li>
        }
    </ul>

    <h6 class="mt-3">Search Transcript</h6>
    <div class="d-flex gap-2">
        <input class="form-control" @bind="searchTerm" placeholder="Search transcript text..." />
        <button class="btn btn-secondary" @onclick="SearchAsync">Search</button>
    </div>
    <ul class="mt-3">
        @foreach (var row in searchResults)
        {
            <li>@row.Summary</li>
        }
    </ul>
</div>

@code {
    private EpisodeDto? nowPlaying;
    private List<ShowDto> shows = new();
    private List<EpisodeDto> episodes = new();
    private List<MomentDto> topMoments = new();
    private List<MomentDto> searchResults = new();
    private string searchTerm = string.Empty;
    private string? errorMessage;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var client = HttpClientFactory.CreateClient("RadioPulse.Api");
            var nowPlayingResponse = await client.GetAsync("/api/now-playing");
            nowPlaying = nowPlayingResponse.IsSuccessStatusCode
                ? await nowPlayingResponse.Content.ReadFromJsonAsync<EpisodeDto>()
                : null;
            shows = await client.GetFromJsonAsync<List<ShowDto>>("/api/shows") ?? new List<ShowDto>();
            episodes = await client.GetFromJsonAsync<List<EpisodeDto>>("/api/episodes") ?? new List<EpisodeDto>();
            topMoments = await client.GetFromJsonAsync<List<MomentDto>>("/api/transcripts/top-moments") ?? new List<MomentDto>();
        }
        catch (Exception ex)
        {
            errorMessage = $"Unable to load media data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchAsync()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            searchResults = new List<MomentDto>();
            return;
        }

        try
        {
            var client = HttpClientFactory.CreateClient("RadioPulse.Api");
            searchResults = await client.GetFromJsonAsync<List<MomentDto>>($"/api/transcripts/search?term={Uri.EscapeDataString(searchTerm)}")
                ?? new List<MomentDto>();
            errorMessage = null;
        }
        catch (Exception ex)
        {
            searchResults = new List<MomentDto>();
            errorMessage = $"Transcript search failed: {ex.Message}";
        }
    }

    private sealed class ShowDto
    {
        public string Title { get; set; } = string.Empty;
        public string HostName { get; set; } = string.Empty;
        public TimeOnly StartTimeUtc { get; set; }
        public TimeOnly EndTimeUtc { get; set; }
    }

    private sealed class EpisodeDto
    {
        public string Title { get; set; } = string.Empty;
        public string? AudioUrl { get; set; }
        public DateTimeOffset PublishedAtUtc { get; set; }
    }

    private sealed class MomentDto
    {
        public string? Summary { get; set; }
    }
}
