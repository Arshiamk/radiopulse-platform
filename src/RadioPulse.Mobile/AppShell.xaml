<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RadioPulse.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:RadioPulse.Mobile.Pages"
    Title="RadioPulse Mobile">

    <TabBar>
        <ShellContent Title="Login" ContentTemplate="{DataTemplate pages:LoginPage}" />
        <ShellContent Title="Now Playing" ContentTemplate="{DataTemplate pages:NowPlayingPage}" />
        <ShellContent Title="Vote" ContentTemplate="{DataTemplate pages:EngagementPage}" />
        <ShellContent Title="Recs" ContentTemplate="{DataTemplate pages:RecommendationsPage}" />
    </TabBar>

</Shell>
