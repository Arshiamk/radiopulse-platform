<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RadioPulse.Mobile.Pages.RecommendationsPage"
             Title="Recommendations">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Recommended for you" FontSize="24" FontAttributes="Bold" />
        <Button Text="Refresh" Clicked="OnRefreshClicked" />
        <CollectionView x:Name="RecommendationsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="{Binding StationName}" />
                        <Label Text="{Binding Score}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
