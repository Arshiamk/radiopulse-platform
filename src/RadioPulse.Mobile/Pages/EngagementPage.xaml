<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RadioPulse.Mobile.Pages.EngagementPage"
             Title="Vote &amp; Shoutout">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Live Poll" FontSize="24" FontAttributes="Bold" />
        <Label Text="Login on the Login tab first. Uses SignalR with API fallback." FontSize="12" Opacity="0.8" />
        <Label x:Name="PollLabel" Text="Loading poll..." />
        <HorizontalStackLayout Spacing="10">
            <Button Text="Vote A" Clicked="OnVoteAClicked" />
            <Button Text="Vote B" Clicked="OnVoteBClicked" />
        </HorizontalStackLayout>
        <Entry x:Name="ShoutoutEntry" Placeholder="Send shoutout" />
        <Button Text="Send Shoutout" Clicked="OnSendShoutoutClicked" />
        <Label x:Name="StatusLabel" />
    </VerticalStackLayout>
</ContentPage>
